{
  "schemaVersion": 1,
  "id": "flowerpatch",
  "version": "${version}",

  "name": "Flower Patch",
  "description": "Allows you to combine multiple of the same flower similar to how you can have multiple sea pickles and candles in a block space.",
  "authors": [
    "Mrbysco",
    "ShyNieke"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/flower-patch",
    "sources": "https://github.com/Mrbysco/FlowerPatch",
    "issues": "https://github.com/Mrbysco/FlowerPatch/issues"
  },

  "license": "MIT",
  "icon": "icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.mrbysco.flowerpatch.FlowerPatch"
    ],
    "client": [
      "com.mrbysco.flowerpatch.FlowerPatchClient"
    ],
    "modmenu": [
      "com.mrbysco.flowerpatch.config.FlowerPatchMenuIntegration"
    ]
  },
  "mixins": [
	"flowerpatch.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.11",
    "fabric": "*",
    "minecraft": "~1.19.3",
    "java": ">=17",
    "cloth-config": ">=9.0.94"
  },
  "suggests": {
    "another-mod": "*"
  }
}
